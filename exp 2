

 CREATE TABLE DEPARTMENT (
    DeptNo INT PRIMARY KEY,
    DeptName VARCHAR(30)
);

 CREATE TABLE STUDENT (
    RegNo INT,
    Name VARCHAR(15),
    Gender CHAR(1),
    DOB DATE,
    MobileNo BIGINT NOT NULL,
    City VARCHAR(15),
    CONSTRAINT pk_regno PRIMARY KEY (RegNo)
);

 CREATE TABLE FACULTY (
    FacNo VARCHAR(4),
    FacName VARCHAR(15),
    Gender CHAR(1),
    DOB DATE,
    DOJ DATE,
    MobileNo BIGINT,
    DeptNo INT,
    CONSTRAINT pk_facno PRIMARY KEY (FacNo),
    CONSTRAINT chk_gender CHECK (Gender IN ('M', 'F')),
    CONSTRAINT fk_dept FOREIGN KEY (DeptNo) REFERENCES DEPARTMENT(DeptNo)
);
 SHOW TABLES;

 DESCRIBE DEPARTMENT;
DESCRIBE STUDENT;
DESCRIBE FACULTY;

 SELECT * FROM DEPARTMENT;
SELECT * FROM STUDENT;
SELECT * FROM FACULTY;
